<ContentPage
    x:Class="MauiApp1.ScorePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Result">

    <StackLayout
        Padding="10"
        HorizontalOptions="Center"
        Spacing="20">

        <Label
            x:Name="timeLabel"
            FontSize="24"
            HorizontalOptions="Center"
            TextColor="Green" />
        <Label
            x:Name="recordLabel"
            FontSize="18"
            HorizontalOptions="Center"
            TextColor="Yellow" />
        <Label
            x:Name="recordTable"
            FontSize="18"
            HorizontalOptions="Center"
            LineHeight="2" />

        <Button
            Clicked="RestartGame"
            FontSize="24"
            Text="Play Again" />
    </StackLayout>
</ContentPage>
